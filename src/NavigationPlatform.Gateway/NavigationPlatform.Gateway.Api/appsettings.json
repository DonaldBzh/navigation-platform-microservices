{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "Auth": {
    "Issuer": "PLACEHOLDER_ISSUER",
    "Audience": "PLACEHOLDER_AUDIENCE",
    "Key": "PLACEHOLDER_JWT_SECRET"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-logout-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/logout",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "RequireAuth"
      },
      "auth-public-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "admin-user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/admin/users/{**catch-all}"
        },
        "AuthorizationPolicy": "RequireAdmin"
      },
      "journey-admin-route": {
        "ClusterId": "journey-cluster",
        "Match": {
          "Path": "/api/journeys/admin/filtered-journeys"
        },
        "AuthorizationPolicy": "RequireAdmin"
      },
      "journey-summary-route": {
        "ClusterId": "journey-cluster",
        "Match": {
          "Path": "/api/JourneysSummary/monthly-distances"
        },
        "AuthorizationPolicy": "RequireAdmin"
      },
      "journey-feed-route": {
        "ClusterId": "journey-cluster",
        "Match": {
          "Path": "/api/journeys/feed",
          "Methods": [ "GET" ]
        },
        "AuthorizationPolicy": "RequireAuth"
      },
      "journey-public-token-route": {
        "ClusterId": "journey-cluster",
        "Match": {
          "Path": "/api/journeys/public/{**catch-all}"
        }
      },
      "journey-protected-single-route": {
        "ClusterId": "journey-cluster",
        "Match": {
          "Path": "/api/journeys/{id}",
          "Methods": [ "GET", "DELETE" ]
        },
        "AuthorizationPolicy": "RequireAuth"
      },
      "journey-share-route": {
        "ClusterId": "journey-cluster",
        "Match": {
          "Path": "/api/journeys/{id}/share"
        },
        "AuthorizationPolicy": "RequireAuth"
      },
      "journey-public-link-route": {
        "ClusterId": "journey-cluster",
        "Match": {
          "Path": "/api/journeys/{id}/public-link"
        },
        "AuthorizationPolicy": "RequireAuth"
      },
      "journey-revoke-link-route": {
        "ClusterId": "journey-cluster",
        "Match": {
          "Path": "/api/journeys/{id}/revoke-public-link"
        },
        "AuthorizationPolicy": "RequireAuth"
      },
      "journey-collection-route": {
        "ClusterId": "journey-cluster",
        "Match": {
          "Path": "/api/journeys",
          "Methods": [ "POST", "GET" ]
        },
        "AuthorizationPolicy": "RequireAuth"
      },
      "swagger-identity": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/swagger/identity/swagger.json"
        },
        "Transforms": [
          { "PathRemovePrefix": "/swagger/identity" },
          { "PathSet": "/swagger/v1/swagger.json" }
        ]
      },
      "swagger-user": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/swagger/user/swagger.json"
        },
        "Transforms": [
          { "PathRemovePrefix": "/swagger/user" },
          { "PathSet": "/swagger/v1/swagger.json" }
        ]
      },
      "swagger-journey": {
        "ClusterId": "journey-cluster",
        "Match": {
          "Path": "/swagger/journey/swagger.json"
        },
        "Transforms": [
          { "PathRemovePrefix": "/swagger/journey" },
          { "PathSet": "/swagger/v1/swagger.json" }
        ]
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity-service": {
            "Address": "PLACEHOLDER_IDENTITY_SERVICE_URL"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/healthz"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "user-service": {
            "Address": "PLACEHOLDER_USER_SERVICE_URL"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/healthz"
          }
        }
      },
      "journey-cluster": {
        "Destinations": {
          "journey-service": {
            "Address": "PLACEHOLDER_JOURNEY_SERVICE_URL"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/healthz"
          }
        }
      }
    }
  }
}