{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "RewardsDb": "PLACEHOLDER_REWARDS_DB_CONNECTION",
    "Redis": "PLACEHOLDER_REDIS_CONNECTION"
  },
  "Kafka": {
    "BootstrapServers": "PLACEHOLDER_KAFKA_CONNECTION",
    "GroupId": "reward-service-group",
    "Topics": {
      "JourneyCreated": "journey-created-events",
      "DailyGoalAchieved": "daily-goal-achieved-events"
    },
    "Consumer": {
      "AutoOffsetReset": "earliest",
      "EnableAutoCommit": true,
      "AutoCommitIntervalMs": 5000,
      "SessionTimeoutMs": 10000
    },
    "Producer": {
      "Acks": "all",
      "Retries": 3,
      "EnableIdempotence": true
    }
  },
  "Cache": {
    "DefaultTtlMinutes": 1440,
    "DailyTotalsTtlHours": 25
  },
  "BusinessRules": {
    "DailyGoalThresholdKm": 20.0
  }
}