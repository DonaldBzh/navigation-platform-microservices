# ==============================================
# NAVIGATION PLATFORM - DOCKER CONFIGURATION
# ==============================================
# Authentication & Authorization
JWT_SECRET=your_secure_jwt_secret_here_minimum_32_characters
JWT_ISSUER=https://navigationplatform.com
JWT_AUDIENCE=https://navigationplatform.com
AUTH_ACCESS_TOKEN_EXPIRY_MINUTES=15
AUTH_REFRESH_TOKEN_EXPIRY_MINUTES=600
# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_database_password_here
# Database connection strings
IDENTITY_DB_CONNECTION=Host=identity-db;Port=5432;Database=identity;Username=postgres;Password=your_secure_database_password_here
USERS_DB_CONNECTION=Host=users-db;Port=5432;Database=users;Username=postgres;Password=your_secure_database_password_here
JOURNEYS_DB_CONNECTION=Host=journeys-db;Port=5432;Database=journeys;Username=postgres;Password=your_secure_database_password_here
REWARDS_DB_CONNECTION=Host=rewards-db;Port=5432;Database=rewards;Username=postgres;Password=your_secure_database_password_here
# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_CONNECTION=redis-reward:6379,abortConnect=false
# ==============================================
# KAFKA CONFIGURATION
# ==============================================
KAFKA_CONNECTION=kafka:29092
# ==============================================
# MICROSERVICES URLS
# ==============================================
IDENTITY_SERVICE_URL=http://platform-identity:80
USER_SERVICE_URL=http://platform-user-management:80
JOURNEY_SERVICE_URL=http://platform-journey:80